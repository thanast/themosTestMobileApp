<?xml version='1.0' encoding='utf-8'?>
<widget id="gr.infokey.employeedirectory" version="1.1.0" versionCode="10" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Employee Directory</name>
    <description>
        A simple employee directory application
    </description>
    <author email="thanast@infokey.gr" href="http://infokey.gr">
        Themistoklis Anastasopoulos
    </author>
    <content src="index.html" />
    <access origin="*" />
    <config-file mode="merge" parent="/*" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera.autofocus" />
    </config-file>
    <preference name="phonegap-version" value="cli-7.1.0" />
</widget>
